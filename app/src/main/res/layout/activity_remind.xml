<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="es.esy.practikality.healr.RemindActivity">

    <TextView
        android:id="@+id/healr_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/productsans_bold"

        android:text="Healr."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/add_drug_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/healr_pickup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/adddrugimg"
        android:fontFamily="@font/productsans"
        android:text="Add Drug(s)"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/add_drug_remind"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/add_drug_remind"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/arrow" />

    <Spinner
        android:id="@+id/spinnerdrugremind"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/add_drug_remind"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:popupBackground="#ffffff"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
        android:id="@+id/expirationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerdrugremind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/expirytxt"
        android:textAlignment="center"
        android:fontFamily="@font/productsans"
        android:text="Expiration Date"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:id="@+id/lin">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:hint="mm/yy"
            android:paddingStart="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/expirationdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="date"
                android:textAlignment="center"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff"
        android:elevation="7dp"
        android:text="Set Reminder"
        android:layout_marginTop="30dp"
        android:layout_below="@id/lin"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:background="@drawable/setreminderbtn"
        android:onClick="goToAddress"
        android:id="@id/expirationtxt"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#fff">


                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    android:onClick="gotoPickup"
                    android:src="@drawable/pickup" />
        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="goToRemind"
                android:src="@drawable/remind"
                android:paddingTop="6dp"/>
        </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="goToCollab"
                android:src="@drawable/collab" />



            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:onClick="goToProfile"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
